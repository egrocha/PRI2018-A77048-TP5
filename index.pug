extends layout

block corpo
    .w3-container
        .w3-card-4
            header.w3-container.w3-light-grey
                h3 Arquivo de Marchas
            .w3-container
                table.w3-table.w3-bordered
                    tr
                        th Marcha 
                        th Lista de marchas
                    - var n = 0;
                    each f in ind.ficheiros
                        tr
                            td #{Object.keys(ind.ficheiros)[n++]}
                            td
                                ul
                                    each block in f
                                        li
                                            a(href="http://localhost:5001/marchas/" + block["_id"])= block["titulo"]